<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
version="4.0">
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/dbmusicplaylist?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>ilrichi10</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter> 
      <filter-name>LoginChecker</filter-name>
      <filter-class>filters.LoginChecker</filter-class> 
 </filter> 
 <filter-mapping> 
    <filter-name>LoginChecker</filter-name> 
    <url-pattern>/Home.html</url-pattern>
    <url-pattern>/AddSong</url-pattern>
    <url-pattern>/AddOrder</url-pattern>  
    <url-pattern>/CreatePlaylist</url-pattern> 
    <url-pattern>/CreateSong</url-pattern> 
    <url-pattern>/GetPlaylistData</url-pattern>
    <url-pattern>/GetSongDetails</url-pattern> 
    <url-pattern>/GetSongs</url-pattern>
    <url-pattern>/GetSongsUser</url-pattern>
 </filter-mapping> 
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
 </web-app>